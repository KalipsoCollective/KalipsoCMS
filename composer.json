{
    "name": "halillusion/kalipsocms",
    "type": "project",
    "description": "KalipsoCMS - KalipsoNext-based, open source, powerful and experimental content management system.",
    "keywords": ["framework", "kalipso", "kalipsonext", "php-framework", "cms", "content management system"],
    "license": "MIT",
    "authors": [
        {
            "name": "Halil Ibrahim Ercelik",
            "email": "halillusion@gmail.com",
            "homepage": "https://koalapix.com"
        }
    ],
    "require": {
        "php": "^7.1|^8.0",
        "ext-pdo": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-magic": "*",
        "izniburak/pdox": "^1.6",
        "phpmailer/phpmailer": "^6.6",
        "verot/class.upload.php": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "KN\\": "app"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
